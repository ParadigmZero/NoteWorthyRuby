<p id="notice"><%= notice %></p>

<h2>Tags <%= octicon "bookmark", :height => 24 %></h2>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
<!--  foreach keyword (tag)-->
    <% @keywords.each do |keyword| %>
      <tr>
        <%#= octicon "x-circle-fill", :height => 16 %>

        <td><%= keyword.tag %></td>
<!--        <td><%#= link_to 'Show', keyword %></td>-->
<!--        <td><%#= link_to 'Edit', edit_keyword_path(keyword) %></td>-->
        <td>
          <a data-method="delete" href=<%= "/keywords/#{keyword.id}" %>><%= octicon "x-circle-fill", :height => 16 %></a>
</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

